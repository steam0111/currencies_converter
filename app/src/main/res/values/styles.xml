<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImageViewIconCoinStyle">
        <item name="android:layout_width">@dimen/icon_size_36</item>
        <item name="android:layout_height">@dimen/icon_size_36</item>
    </style>

    <style name="TextViewCurrencyNameStyle">
        <item name="android:layout_width">@dimen/icon_size_36</item>
        <item name="android:layout_height">@dimen/icon_size_36</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextInputCurrencyStyle">
        <item name="android:layout_gravity">end</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
